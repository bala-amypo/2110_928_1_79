<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="TransportRouteOptimizationSuite" verbose="2" parallel="false">

    <!-- Listener to print test results -->
    <listeners>
        <listener class-name="com.example.demo.TestResultListener"/>
    </listeners>

    <!-- Define the test -->
    <test name="TransportRouteOptimizationTests">

        <!-- Include the class containing all 65 tests -->
        <classes>
            <class name="com.example.demo.TransportRouteOptimizationTest"/>
        </classes>

        <!-- Optional: define groups -->
        <groups>
            <run>
                <include name="servlet"/>
                <include name="crud"/>
                <include name="di"/>
                <include name="hibernate"/>
                <include name="normalization"/>
                <include name="manytomany"/>
                <include name="security"/>
                <include name="hql"/>
            </run>
        </groups>

    </test>

</suite>
